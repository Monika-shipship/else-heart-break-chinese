# Checks player's input and returns a correct value.
# 检查玩家的输入并返回一个正确的值。
# This could probably be redone, better
# 这可能可以重做，做得更好
void Reply()
	loop
		string initreply
		string answer
		Print("")
		initreply = Input("Enter a number:  / 输入一个数字：")
		if initreply == "1"
			return initreply
		else if initreply == "2"
			return initreply
		else if initreply == "3"
			return initreply
		else
			answer = "invalid"
			return answer
		end
	end
end

