void DisplayDataAsImage(array data)
    if Count(data) < 2
        Print("Not enough data / 数据不足")
    end

    Color(0,1,1)

    var x = data[0]
    var y = data[1]
    
    number i = 2
    loop
        if i >= Count(data)
            break
        end

        var x2 = data[i]
        var y2 = data[i + 1]

        Line(x, y, x2, y2)
        
        x = x2
        y = y2
        
        i += 2
    end
    
    DisplayGraphics()
end
